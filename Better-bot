const { Client, Message } = require("discord.js")

module.exports = {
  name: "ticket by awlogod",

  run: async(client, message, args) => {

    message.delet()

    const awlo = message.guild.channels.cache.find(ch => ch.name ===  `${message.author.id} `);

    if (awlo) return message.channel.send( `:x: | ${message.author} Seu ticket estÃ¡ aberto em: ${awlo}!`).then(msg => msg.delete({timeout: 1500}));

     message.guild.channels.create( `${message.author.id}`, {
       type : 'text',
       permissionOverwrites : [
         {
           id : message.guild.id,
           deny : ['VIEW_CHANNEL', 'SEND_MESSAGES', 'ATTACH_FILES']
         }
       ]
     
   }).then(async channels=> {
     message.channel.send(`âœ… | ${message.author} Ticket criado com sucesso: ${channel}`).then(msg => msg.delet({timeout: 1500}));
     channel.send(`ðŸ‘‹ | OlÃ¡ ${message.author}, este Ã© o seu ticket! \nðŸ‘‹ | Caso queira fechar seu ticket, utilize **!close**.` )
   })
  }
}

client.login(config.token);
